.doing
  padding 244px 0 84px
  position relative
  &.viewed
    .doing__block
      animation fade .3s forwards
      &:nth-child(2),
      &:nth-child(5),
      &:last-child
        &:before,
        &:after
          animation line .7s 3s forwards

.doing__wrap
  padding 0 perc(120)

.doing__title
  display flex
  flex-wrap: wrap
  position absolute
  left 0
  right 0
  top 63px
  max-width 1051px
  margin 0 auto

.doing__block
  display block
  color black-color
  font-size 123px
  line-height 123px
  font-weight 900
  text-transform uppercase
  position relative
  width: 125px;
  height: 100px;
  text-align: center;
  line-height: 0.77;
  margin-bottom 158px;
  opacity 0
  &+&
    margin-left auto
  &:nth-child(2),
  &:nth-child(5),
  &:last-child
    &:before
      content ''
      display block
      position absolute
      width 0
      max-width 107px
      height 1px
      border 1px solid #000000
      opacity 0.58
      animation-delay 2.5s
  &:nth-child(2)
    &:before
      top 50%
      transform translateY(-50%)
      right -120%
  &:nth-child(5),
  &:last-child
    animation-delay 2.4s
    &:before
      transform rotate(-45deg)
      top -80%
      right -100%
  &:nth-child(4),
  &:nth-child(6)
    margin-left perc(200)
  &:nth-child(5)
    margin-left perc(840)
  &:last-child
    color #fff
    margin-left auto
    margin-right perc(370)
    margin-bottom 0
    &:after
      content ''
      display block
      width 0
      max-width 85px
      height 100%
      background-color accent-color
      position absolute
      z-index -1
      top 0
      left 50%
.doing__info
  display flex
  align-items flex-end

.doing__header
  margin-right 24px
  padding-top 60px
  display flex
  flex-direction column
  justify-content space-between

.doing__subtitle
  display flex

.doing__row
  display block
  writing-mode vertical-lr
  transform rotate(180deg)
  color black-color
  font-weight 300
  text-transform uppercase

.doing__count
  display block
  writing-mode vertical-lr
  transform rotate(180deg)
  opacity 0.27
  color #292929
  font-size 123px
  font-weight 900
  text-transform uppercase
  width 120px

.doing__content
  border 1px solid #000000
  background-color black-color
  padding 50px 73px 47px 83px
  max-width 513px

.doing__subtitle
  color #ffffff
  font-size 24px
  font-weight 300
  text-transform uppercase
  letter-spacing 2.4px
  margin-bottom 45px

.doing__text
  color #ffffff
  font-size 18px
  font-weight 200
  line-height 27px
  letter-spacing 1.8px
  a
    color inherit