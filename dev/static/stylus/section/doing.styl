.doing
  padding 244px 0 84px
  position relative
  &.viewed
    .doing__block
      animation fade .3s forwards
      &:nth-child(2),
      &:nth-child(5),
      &:last-child
        &:before,
        &:after
          animation line .7s 3s forwards
  @media (max-width screen-lg)
    padding 313px 0 59px
  @media (max-width screen-md)
    padding 220px 0 50px
  @media (max-width screen-sm)
    padding 30px 0

.doing__wrap
  max-width 1051px
  margin 0 auto
  @media (max-width screen-md)
    padding 0 20px

.doing__title
  display flex
  flex-wrap: wrap
  position absolute
  left 0
  right 0
  top 63px
  max-width 1051px
  margin 0 auto
  z-index -1
  @media (max-width screen-sm)
    justify-content center
    top 30px

.doing__block
  display block
  color black-color
  font-size 123px
  line-height 123px
  font-weight 900
  text-transform uppercase
  position relative
  width: 125px;
  height: 100px;
  text-align: center;
  line-height: 0.77;
  margin-bottom 147px;
  opacity 0
  &+&
    margin-left auto
  &:nth-child(2),
  &:nth-child(5),
  &:last-child
    &:before
      content ''
      display block
      position absolute
      width 0
      max-width 107px
      height 1px
      border 1px solid #000000
      opacity 0.58
      animation-delay 2.5s
  &:nth-child(2)
    &:before
      top 50%
      transform translateY(-50%)
      right -120%
  &:nth-child(5),
  &:last-child
    animation-delay 2.4s
    &:before
      transform rotate(-45deg)
      top -80%
      right -100%
  &:nth-child(4),
  &:nth-child(6)
    margin-left perc(200)
  &:nth-child(5)
    margin-left perc(840)
  &:last-child
    color #fff
    margin-left auto
    margin-right perc(370)
    margin-bottom 0
    &:after
      content ''
      display block
      width 0
      max-width 85px
      height 100%
      background-color accent-color
      position absolute
      z-index -1
      top 0
      left 50%
  @media (max-width screen-lg)
    font-size 90px
    line-height 90px
    margin-bottom 50px
    height 66px
    &:nth-child(2),
    &:nth-child(5),
    &:last-child
      &:before
        display none
    &:nth-child(4),
    &:nth-child(6)
      margin-left auto
    &:nth-child(5)
      margin-left perc(250)
    &:last-child
      margin-right 20px
      &:after
        top 5px
        max-width 50px
  @media (max-width screen-md)
    font-size 70px
    line-height 70px
    width 100px
  @media (max-width screen-sm)
    font-size 44px
    line-height 44px
    width auto
    &+&
      margin-left 5px
    &:nth-child(5)
      margin 0 15px 0 20px 
    &:last-child
      color: black-color
      margin-right 0
      &:after
        display none



.doing__info
  display flex
  align-items flex-end
  @media (max-width screen-md)
    display block

.doing__header
  margin-right 24px
  padding-top 60px
  display flex
  flex-direction column
  justify-content space-between
  @media (max-width screen-lg)
    align-items: center
  @media (max-width screen-md)
    flex-direction row-reverse
    align-items center
    margin-bottom 25px
    margin-right 0

.doing__name
  display flex
  @media (max-width screen-md)
    flex-direction column

.doing__row
  display block
  writing-mode vertical-lr
  transform rotate(180deg)
  color black-color
  font-weight 300
  text-transform uppercase
  @media (max-width screen-md)
    writing-mode lr
    transform none
    font-size 20px

.doing__count
  display block
  writing-mode vertical-lr
  transform rotate(180deg)
  opacity 0.27
  color #292929
  font-size 123px
  font-weight 900
  text-transform uppercase
  width 120px
  margin-top 100px
  @media (max-width screen-md)
    writing-mode lr
    transform none
    margin-top 0

.doing__content
  border 1px solid #000000
  background-color black-color
  padding 50px 73px 47px 83px
  max-width 513px
  @media (max-width screen-md)
    max-width 100%
    padding 25px 40px
  @media (max-width screen-sm)
    padding 20px

.doing__subtitle
  color #ffffff
  font-size 24px
  font-weight 300
  text-transform uppercase
  letter-spacing 0.6px
  margin-bottom 45px
  @media (max-width screen-md)
    margin-bottom 20px

.doing__text
  color #ffffff
  font-weight 200
  line-height 27px
  letter-spacing 0.55px
  max-width 313px