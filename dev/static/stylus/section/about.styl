.about
  background-color black-color
  padding 100px 0 118px
  color #fff
  @media (max-width screen-lg)
    padding 80px 0 90px

.about__wrap
  display flex
  justify-content space-between
  padding 0 perc(138) 0 perc(143)
  @media (max-width screen-lg)
    padding 0 perc(70)
  @media (max-width screen-sm)
    display block
    padding 0 20px

.about__block
  width 100%
  display flex
  flex-direction column
  &:first-child
    max-width 271px
    margin-right 15px
  &:last-child
    max-width 745px
    animation-delay: .5s
  @media (max-width screen-lg)
    &:first-child
      max-width 160px
  @media (max-width screen-lg)
    justify-content center
    align-items: center
    text-align center 
    &:first-child
      max-width 100%
      margin-bottom 40px
    &:last-child
      max-width 100%

.about__count
  opacity 0.63
  color #292929
  font-size 123px
  font-weight 900
  text-transform uppercase
  writing-mode vertical-lr
  transform rotate(180deg)
  align-self: flex-start
  margin-bottom 17px
  height 160px
  @media (max-width screen-lg)
    height auto
    writing-mode lr
    transform none
    align-self auto

.about__title
  opacity 0.36
  text-transform uppercase
  writing-mode vertical-lr
  transform rotate(180deg)
  padding-left 40px
  margin-bottom 30px
  @media (max-width screen-lg)
    writing-mode lr
    transform none
    padding-left 0

.about__quote
  margin-bottom 27px

.about__text
  line-height 27px
  font-weight 200
  letter-spacing 0.6px
  &+&
    margin-top 10px

.about__header
  font-size 30px
  font-weight 300
  line-height 40px
  text-transform uppercase
  letter-spacing 3px
  max-width 580px
  margin-bottom 54px
  @media (max-width screen-md)
    max-width 100%
    margin-bottom 25px

.about__info
  display flex
  justify-content space-between
  @media (max-width screen-lg)
    display block

.about__photo
  flex none
  position relative
  &:after
    content ''
    position absolute
    right -60px
    top 80px
    display block
    width 60px
    height 1px
    background-color #ffffff
    opacity 0.57
  @media (max-width screen-lg)
    margin-bottom 25px
    &:after
      display none

.about__descr
  max-width 333px

.about__subheader
  font-size 24px
  line-height 30px
  text-transform uppercase
  letter-spacing 2.4px
  display block
  margin-bottom 15px
  margin-top -3px

.about__social
  margin-top 25px
  display flex
  justify-content flex-end
  align-items: flex-end
  @media (max-width screen-md)
    align-items: center
    justify-content center

.about__item
  opacity 0.5
  @extend .trs
  &:hover
    opacity 1
  &+&
    margin-left 24px
