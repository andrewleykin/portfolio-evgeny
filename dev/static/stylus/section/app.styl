.app__wrap
  display flex

.app__content
  padding 10px 0
  width 100%
  max-width perc(782)
  flex none
  display flex
  align-items center
  justify-content center
  flex-direction column
  color #000000
  @media (max-width screen-md)
    max-width 100%
    text-align center
    padding 30px 0

.app__info
  max-width 336px

.app__title
  margin-bottom 20px
  font-size 24px
  font-weight 300
  text-transform uppercase
  letter-spacing 1.8px

.app__text
  font-size 16px
  font-weight 200
  line-height 24px
  letter-spacing 0.5px

.app__link
  max-width 335px
  margin-top 30px

.app__img
  width 100%
  max-width perc(582)
  img
    width 100%
  @media (max-width screen-lg)
    img
      height 100%
  @media (max-width screen-md)
    display none