.header
  padding 80px 0 27px
  height calc(100vh + 5px)
  min-height 700px
  @media (max-width screen-md)
    padding 40px 0 30px
    height auto
    min-height auto

.header__wrap
  position relative
  @media (max-width screen-md)
    display flex
    flex-direction column
    align-items: center

.header__title
  display flex
  flex-wrap wrap
  margin 0
  line-height 1
  @media (max-width screen-md)
    width 100%

.header__char
  font-size 130px
  line-height 130px
  font-weight 900
  text-transform uppercase
  letter-spacing 9.75px
  position relative
  margin-bottom 67px
  opacity 0
  animation fade .3s forwards
  @extend .trs
  cursor: pointer
  &:hover
    transform scale(1.1)
  &--red
    color accent-color
  &--gray
    color gray-color
    &:before
      content ''
      display block
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      transform translateX(-50%)
      z-index 2
      background #fff
  &--year
    color black
    font-weight 300
    text-transform uppercase
    letter-spacing 0.18px
    font-size 18px
    position absolute
    bottom 19px
    right -50px
    line-height 1
  &+&
    margin-left perc(240)
  &:first-child
    margin-left perc(351)
  &:nth-child(4)
    margin-left perc(466)
  &:nth-child(7)
    margin-left perc(240)
  &:last-child
    margin-left perc(278)
  @media (max-width screen-lg)
    font-size 100px
    line-height 100px
    &--year
      bottom 15px
  @media (max-width screen-md)
    font-size 80px
    line-height 80px
    &--year
      display none
    &+&
      margin-left perc(200)
    &:nth-child(4)
      margin-left perc(406)
  @media (max-width screen-sm)
    font-size 60px
    line-height 60px
    &+&
      margin-left perc(150)
    &:first-child
      margin-left perc(150)
    &:nth-child(4)
      margin-left perc(256)



.header__subtitle
  position absolute
  left perc(136)
  top 50%
  transform translateY(-50%)
  animation fade .3s forwards
  animation-delay .7s
  opacity 0
  @media (max-width screen-md)
    display none

.header__row
  display flex
  &:nth-child(even)
    margin-left 43px
  &+&
    margin-top 32px

.header__block
  color black
  font-weight 300
  text-transform uppercase
  letter-spacing 1.35px
  width 13px
  display block
  text-align center
  &+&
    margin-left 30px

.header__year
  color black
  font-weight 300
  text-transform uppercase
  letter-spacing 0.18px
  position absolute
  top 105px
  right perc(160)
  animation fade .3s forwards
  animation-delay .7s
  opacity 0
  display none
  @media (max-width screen-md)
    display block
    position static
    right 0
    top 0
    order 3
    font-size 24px

.header__name
  display block
  max-width 107px
  color black
  font-weight 300
  text-transform uppercase
  letter-spacing 0.18px
  padding-bottom 12px
  position absolute
  bottom 83px
  right perc(107)
  opacity 0
  animation fade .3s forwards
  animation-delay .8s
  &:after
    content ''
    display block
    background #e05471
    width 0
    height 1px
    position absolute
    left 0
    bottom 0
    animation line .5s forwards
    animation-delay: 1.2s
  @media (max-width screen-md)
    position relative
    bottom 0
    right 0
    order 2
    margin-bottom 15px
    font-size 28px
    max-width 203px