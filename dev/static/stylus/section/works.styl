.works__wrap
  display flex

.works__img
  width 100%
  max-width perc(782)
  position relative
  flex none
  img
    width 100%

.works__count
  writing-mode vertical-lr
  transform rotate(180deg)
  color rgba(#292929, 0.09)
  font-size 123px
  font-weight 900
  text-transform uppercase
  position absolute
  top 95px
  left 118px

.works__name
  writing-mode vertical-lr
  transform rotate(180deg)
  color #292929
  font-size 18px
  font-weight 300
  text-transform uppercase
  position absolute
  top 93px
  left 530px

.works__title
  display flex
  flex-wrap: wrap
  position absolute
  top 70px
  left 0
  right 0

.works__block
  font-size 123px
  font-weight 900
  text-transform uppercase
  width 110px
  &:nth-child(1)
    margin-left 42%
    margin-right 48%
    margin-bottom 25px
  &:nth-child(2)
    margin-left 44%
    margin-right 48%
    margin-bottom 25px
  &:nth-child(3)
    margin-left 15%
  &:nth-child(4),
  &:nth-child(6)
    padding-top 135px

.works__content
  width 100%
  max-width perc(582)
  flex none
  padding 82px 156px 45px 102px

.works__header
  display flex
  align-items: center
  margin-bottom 30px

.works__icon
  flex none
  margin-right 20px

.works__subtitle
  font-size 30px
  line-height 36px
  text-transform uppercase
  letter-spacing 1px

.works__text
  font-weight 200
  line-height 27px
  letter-spacing 0.8px
  a
    color inherit
  &+&
    margin-top 20px
  
.works__link
  max-width 325px
  margin-top 70px