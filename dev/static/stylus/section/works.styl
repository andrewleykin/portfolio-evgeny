.works
  &.viewed
    .works__title
      animation moveUp .8s forwards

.works__wrap
  display flex
  @media (max-width screen-md)
    display block

.works__img
  width 100%
  max-width perc(782)
  position relative
  flex none
  display flex
  overflow hidden
  @media (max-width screen-lg)
    background url(../img/content/works/bg.jpg) center no-repeat
    background-size cover
    max-width perc(964)
  @media (max-width screen-md)
    max-width 100%
    background none 
    display block

.works__img--mobile
  display none
  width 100%
  @media(max-width screen-md)
    display block

.works__img--sky
  position absolute
  top 0
  left 0
  transform scale(1.3)
  z-index -1
  width 100%
  @media (max-width screen-lg)
    display none

.works__img--valun
  position absolute
  bottom 38px
  left perc(388)
  z-index -1
  @media (max-width screen-lg)
    display none

.works__img--valuns
  width 100%
  @media (max-width screen-lg)
    display none

.works__count
  writing-mode vertical-lr
  transform rotate(180deg)
  color rgba(#292929, 0.09)
  font-size 123px
  font-weight 900
  text-transform uppercase
  position absolute
  top 57px
  left 118px
  @media (max-width screen-lg)
    display none

.works__name
  writing-mode vertical-lr
  transform rotate(180deg)
  color #292929
  font-size 18px
  font-weight 300
  text-transform uppercase
  position absolute
  top 70px
  right 221px
  @media (max-width screen-lg)
    display none

.works__title
  display flex
  flex-wrap: wrap
  position absolute
  top 150px
  left 0
  right 0
  z-index -1
  transform translateY(100%)
  animation-delay .5s
  @media (max-width screen-lg)
    display none

.works__block
  font-size 123px
  font-weight 900
  text-transform uppercase
  width 110px
  &:nth-child(1)
    margin-left 39%
    margin-right 48%
    margin-bottom 14px
  &:nth-child(2)
    margin-left 41%
    margin-right 48%
    margin-bottom 17px
  &:nth-child(3)
    margin-left 15%
  &:nth-child(4),
  &:nth-child(6)
    padding-top 135px

.works__content
  width 100%
  max-width perc(582)
  flex none
  padding 82px 156px 45px 102px
  @media (max-width screen-lg)
    max-width perc(400)
    padding 40px 50px
  @media (max-width screen-md)
    max-width 100%
    padding 20px 20px 100px

.works__header
  display flex
  align-items: center
  margin-bottom 30px
  @media (max-width screen-lg)
    flex-direction column
    justify-content center
    align-items: center
    text-align center

.works__icon
  flex none
  margin-right 20px
  @media (max-width screen-lg)
    margin-right 0
    margin-bottom 20px

.works__subtitle
  font-size 30px
  line-height 36px
  text-transform uppercase
  letter-spacing 1px

.works__text
  font-weight 200
  line-height 27px
  letter-spacing 0.7px
  max-width 317px
  &+&
    margin-top 20px
  @media(max-width screen-md)
    text-align center
  
.works__link
  max-width 325px
  margin-top 70px
  @media(max-width screen-md)
    margin-top 30px