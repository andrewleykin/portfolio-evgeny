.btn
  display flex
  justify-content center
  align-items: center
  padding 13px 0
  color black-color
  font-weight 300
  line-height 36px
  text-transform uppercase
  letter-spacing 3.6px
  background white
  width 100%
  cursor pointer
  position relative
  z-index 1
  border 1px solid transparent
  transition 0.5s ease-in-out
  &:before
    content ''
    display block
    position absolute
    z-index -1
    top 0
    left 0
    width 100%
    height 100%
    background black-color
    transform scaleX(0)
    transform-origin left
    transition 0.5s ease-in-out
  &:hover
    color white
    border-color white
    &:before
      transform scaleX(1)
  &--dark
    color: white
    background black-color
    &:before
      background white
    &:hover
      color black-color
      border-color black-color